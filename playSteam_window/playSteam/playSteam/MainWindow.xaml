<Window x:Class="playSteam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:playSteam"
        mc:Ignorable="d"
        Title="MainWindow" Height="459.375" Width="824.697" Closing="Window_Closing">
    <Grid Margin="0,0,2,-3">
        <Image x:Name="avatar" Height="182" Margin="43,92,586,0" VerticalAlignment="Top" OpacityMask="Black"/>
        <Label x:Name="nicklabel" Content="no data" HorizontalAlignment="Left" Margin="199,10,-148,0" VerticalAlignment="Top" Height="37" Width="540" FontFamily="Courier New" FontSize="24" FontWeight="Bold"/>
        <Label x:Name="header" Content="Result for user:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="184" Height="29" RenderTransformOrigin="0.492,0.563" FontSize="18" FontFamily="Courier New"/>
        <Label x:Name="namelabel" Content="" HorizontalAlignment="Left" Margin="199,52,-6,0" VerticalAlignment="Top" FontSize="16" FontFamily="Courier New" FontStyle="Italic" Width="398"/>
        <Label x:Name="header2" Content="Choosed game name:" HorizontalAlignment="Left" Margin="10,295,0,0" VerticalAlignment="Top" Width="236" FontSize="20" FontFamily="Courier New" FontStyle="Italic"/>
        <Label x:Name="choosedGame" Content="no data" HorizontalAlignment="Left" Margin="33,333,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="24" FontFamily="Courier New" Width="772" Height="40"/>
        <Label x:Name="fromlabel" Content="-" HorizontalAlignment="Left" Margin="425,140,0,0" VerticalAlignment="Top" Height="23" Width="181" FontFamily="Courier New" FontWeight="Bold" FontStyle="Italic" FontSize="16"/>
        <Label x:Name="countryheader" Content="Country code:" HorizontalAlignment="Left" Margin="254,138,0,0" VerticalAlignment="Top" Width="157" Height="29" RenderTransformOrigin="0.492,0.563" FontSize="18" FontFamily="Courier New"/>
        <Menu HorizontalAlignment="Left" Height="40" Margin="0,393,0,-2" VerticalAlignment="Top" Width="815">
            <MenuItem x:Name="settings" Header="_Settings" Click="settings_Click" Width="64" Height="30"/>
            <MenuItem x:Name="refresh" Header="_Refresh" Width="64" Height="30" Click="refresh_Click"/>
            <MenuItem x:Name="info" Header="_Info" Width="39" Height="30" Click="info_Click"/>
        </Menu>

    </Grid>
</Window>
